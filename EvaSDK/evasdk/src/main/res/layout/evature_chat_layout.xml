    </FrameLayout>


    <FrameLayout
        android:layout_width="@dimen/evature_main_button_diameter"
        android:layout_height="@dimen/evature_main_button_diameter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/trash_icon"
            android:layout_width="@dimen/evature_main_button_diameter"
            android:layout_height="@dimen/evature_main_button_diameter"
            android:elevation="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="0.48"
            android:scaleY="0.48"
            android:alpha="0.3"
            android:src="@drawable/evature_trash"
            />


     <ImageButton
         android:id="@+id/restart_button"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="@dimen/evature_main_button_diameter"
         android:layout_height="@dimen/evature_main_button_diameter"
         android:adjustViewBounds="true"
         android:scaleType="fitCenter"
         android:scaleX="0.64"
         android:scaleY="0.64"
         android:background="@drawable/evature_custom_button"
         android:contentDescription="Restart"
         android:src="@drawable/evature_trash"
         android:padding="12dp"
         android:elevation="6dp"
         android:visibility="invisible"
           />
    </FrameLayout>


    <FrameLayout
        android:layout_width="@dimen/evature_main_button_diameter"
        android:layout_height="@dimen/evature_main_button_diameter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="28dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/undo_icon"
            android:layout_width="@dimen/evature_main_button_diameter"
            android:layout_height="@dimen/evature_main_button_diameter"
            android:elevation="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:scaleX="0.48"
            android:scaleY="0.48"
            android:alpha="0.3"
            android:src="@drawable/evature_undo"
            />
        <ImageButton
             android:id="@+id/undo_button"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="@dimen/evature_main_button_diameter"
             android:layout_height="@dimen/evature_main_button_diameter"
             android:adjustViewBounds="true"
             android:scaleType="fitCenter"
             android:scaleX="0.64"
             android:scaleY="0.64"
             android:background="@drawable/evature_custom_button"
             android:contentDescription="Undo"
             android:src="@drawable/evature_undo"
             android:padding="12dp"
             android:elevation="6dp"
             android:visibility="invisible"
               />
    </FrameLayout>
    
  
</RelativeLayout>